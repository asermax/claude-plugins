{
  "description": "Beads plugin hooks",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|compact",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-init.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
